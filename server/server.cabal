Executable run-server
  default-language:  Haskell2010
  if flag(profiling)
    ghc-options:     -rtsopts -O2 -eventlog -threaded
  else
    ghc-options:     -O2 -j
  main-is:           Main.hs
  hs-source-dirs:    run-server
  if flag(build-run-server)
    buildable: True
    build-depends:
      base ,
      server
  else
    buildable: False


Executable insert-pass
  default-language:  Haskell2010
  main-is:           Main.hs
  hs-source-dirs:    insert-pass
